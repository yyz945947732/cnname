{
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "ES2017"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  }
}